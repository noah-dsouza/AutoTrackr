generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CarStatus {
  available
  pending
  sold
}

model Car {
  id          String    @id @default(uuid())
  make        String
  model       String
  year        Int
  price       Int
  mileage     Int
  color       String
  status      CarStatus  @default(available)
  vin         String     @unique
  description String
  imageUrl    String

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  soldAt      DateTime?

  @@index([make])
  @@index([status])
  @@index([soldAt])
  @@index([createdAt])
}